@charset "UTF-8";
/**
 * wxParser 基础样式
 */
.wxParser-div,
.wxParser-p {
  word-break: break-all;
  overflow: auto;
  max-width: 100%;
}
.wxParser-inline {
  display: inline;
  margin: 0;
  padding: 0;
}
.wxParser-div {
  margin: 0;
  padding: 0;
}
.wxParser-p {
  margin: 5rpx 0;
}
.wxParser-br {
  height: 1em;
}
.wxParser-h1 {
  font-size: 2em;
  margin: .67em 0;
}
.wxParser-h2 {
  font-size: 1.5em;
  margin: .75em 0;
}
.wxParser-h3 {
  font-size: 1.17em;
  margin: .83em 0;
}
.wxParser-h4 {
  margin: 1.12em 0;
}
.wxParser-h5 {
  font-size: .83em;
  margin: 1.5em 0;
}
.wxParser-h6 {
  font-size: .75em;
  margin: 1.67em 0;
}
.wxParser-h1,
.wxParser-h2,
.wxParser-h3,
.wxParser-h4,
.wxParser-h5,
.wxParser-h6,
.wxParser-b,
.wxParser-strong {
  font-weight: bolder;
}
.wxParser-i,
.wxParser-cite,
.wxParser-em,
.wxParser-var,
.wxParser-address {
  font-style: italic;
}
.wxParser-pre,
.wxParser-tt,
.wxParser-code,
.wxParser-kbd,
.wxParser-samp {
  font-family: monospace;
}
.wxParser-pre {
  white-space: pre;
}
.wxParser-big {
  font-size: 1.17em;
}
.wxParser-small,
.wxParser-sub,
.wxParser-sup {
  font-size: 0.83em;
}
.wxParser-sub {
  vertical-align: sub;
}
.wxParser-sup {
  vertical-align: super;
}
.wxParser-s,
.wxParser-strike,
.wxParser-del {
  text-decoration: line-through;
}
.wxParser-strong,
.wxParser-s {
  display: inline;
}
.wxParser-u {
  text-decoration: underline;
}
.wxParser-u {
  text-decoration: underline;
}
.wxParser-a {
  color: deepskyblue;
  word-break: break-all;
  overflow: auto;
}
.wxParser-video {
  text-align: center;
  margin: 10rpx 0;
}
.wxParser-video-video {
  width: 100%;
}
.wxParser-img {
  overflow: hidden;
  max-width: 100%;
}
.wxParser-blockquote {
  margin: 0;
  padding: 10rpx 0 10rpx 5rpx;
  font-family: Courier, Calibri, "宋体";
  background: #f5f5f5;
  border-left: 3rpx solid #dbdbdb;
}
.wxParser-ul {
  margin: 20rpx 10rpx;
}
.wxParser-li {
  margin: 10rpx 0;
}
.wxParser-li,
.wxParser-li-inner {
  display: flex;
  align-items: baseline;
}
.wxParser-li-text {
  align-items: center;
  line-height: 1em;
}
.wxParser-li-circle {
  display: inline-flex;
  width: 10rpx;
  height: 10rpx;
  background-color: #333;
  margin-right: 12rpx;
  border-radius: 50%;
}
.wxParser-li-square {
  display: inline-flex;
  width: 10rpx;
  height: 10rpx;
  background-color: #333;
  margin-right: 5rpx;
}
.wxParser-li-ring {
  display: inline-flex;
  width: 10rpx;
  height: 10rpx;
  border: 2rpx solid #333;
  border-radius: 50%;
  background-color: #fff;
  margin-right: 5rpx;
}
.wxParser-hidden {
  display: none;
}
.wxParser-tr {
  display: flex;
  border-right: 1rpx solid #e0e0e0;
  border-bottom: 1rpx solid #e0e0e0;
}
.wxParser-th,
.wxParser-td {
  flex: 1;
  padding: 5rpx;
  font-size: 28rpx;
  border-left: 1rpx solid #e0e0e0;
  word-break: break-all;
}
.wxParser-td:last {
  border-top: 1rpx solid #e0e0e0;
}
.wxParser-th {
  background: #f0f0f0;
  border-top: 1rpx solid #e0e0e0;
}
.index-container {
  width: 100%;
}
.index-container .index-hot-sentiment {
  margin-top: 15rpx;
  margin-bottom: 35rpx;
  width: 100%;
}
.index-container .index-hot-sentiment .index-hot-sentiment-content {
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx dotted #999999;
}
.index-container .index-hot-sentiment .index-hot-sentiment-content .content-textarea .content-textarea-text-other .content-textarea-text {
  margin-bottom: 20rpx;
  font-size: 34rpx;
  color: #333333;
}
.index-container .index-hot-sentiment .index-hot-sentiment-content .content-textarea text {
  display: block;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #666666;
}
.index-container .index-hot-sentiment .index-hot-sentiment-content .content-textarea .hot-sentiment-source {
  display: flex;
  justify-content: space-between;
  width: 100%;
}
.index-container .index-hot-sentiment .index-hot-sentiment-content .content-textarea .hot-sentiment-source .focu-img {
  margin-right: 40rpx;
  width: 50rpx;
  height: 50rpx;
  background-size: 100% 100%;
}
.index-container .index-hot-sentiment .spread {
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  width: 100%;
}
.index-container .index-hot-sentiment .spread .spread-record {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx 10rpx 0rpx;
  box-sizing: border-box;
  width: 100%;
  border: 1rpx solid #666666;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #666666;
}
.index-container .index-hot-sentiment .spread .spread-record .spread-content {
  display: flex;
  align-items: center;
}
.index-container .index-hot-sentiment .spread .spread-record .spread-content .content-img {
  width: 105rpx;
  height: 60rpx;
  background-size: 100% 100%;
}
.index-container .index-hot-sentiment .spread .spread-record .spread-content .spread-title {
  display: flex;
  flex-direction: column;
}
.index-container .index-hot-sentiment .spread .spread-record .spread-content .spread-title .title {
  margin-bottom: 10rpx;
  font-size: 32rpx;
}
.index-container .index-hot-sentiment .spread .spread-record .spread-content .content {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.index-container .index-hot-sentiment .spread .spread-record .spread-content .content .title {
  margin-bottom: 10rpx;
  font-size: 32rpx;
}
.index-container .index-hot-sentiment .spread .spread-record .spread-nav {
  font-size: 30rpx;
  color: #6699FF;
}
.index-container .index-hot-sentiment .spread .spread-record .spread-index {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #6699FF;
  text-align: center;
  line-height: 50rpx;
  color: #ffffff;
  font-size: 32rpx;
}
.index-container .index-hot-sentiment .index-hot-sentiment-detail {
  margin-top: 20rpx;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.index-container .index-hot-sentiment .index-hot-sentiment-detail text {
  width: 100%;
  font-size: 30rpx;
  color: #666666;
}
.index-container .sentiment-button {
  margin-bottom: 55rpx;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.index-container .sentiment-button .button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.index-container .sentiment-button .button .button-add {
  height: 70rpx;
  border-radius: 15rpx;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
  border: 1rpx solid #ffffff;
  background-color: #6699FF;
  color: #ffffff;
  font-size: 34rpx;
  text-align: center;
  line-height: 70rpx;
}
