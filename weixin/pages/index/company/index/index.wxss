@charset "UTF-8";
.index-container {
  width: 100%;
}
.index-container .index-company-info {
  width: 100%;
  padding: 20rpx 30rpx 40rpx;
  box-sizing: border-box;
  border-bottom: 1rpx dotted #666666;
}
.index-container .index-company-info .index-company-logo {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}
.index-container .index-company-info .index-company-logo .logo-info {
  display: flex;
}
.index-container .index-company-info .index-company-logo .logo-info .logo-img {
  width: 160rpx;
  height: 160rpx;
  background-size: 100% 100%;
}
.index-container .index-company-info .index-company-logo .logo-info .logo-name {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 30rpx;
  font-size: 34rpx;
  color: #666666;
}
.index-container .index-company-info .index-company-logo .logo-info .logo-name .logo-catagory {
  display: flex;
  align-items: center;
}
.index-container .index-company-info .index-company-logo .logo-info .logo-name .logo-catagory .catagory-name {
  height: 50rpx;
  padding: 0rpx 7rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  background-color: #0099FF;
  font-size: 28rpx;
  color: #ffffff;
  line-height: 50rpx;
  margin-right: 25rpx;
}
.index-container .index-company-info .index-company-logo .logo-info .logo-name .logo-catagory .share {
  position: relative;
  width: 50rpx;
  height: 50rpx;
}
.index-container .index-company-info .index-company-logo .logo-info .logo-name .logo-catagory .share .logo-share {
  width: 50rpx;
  height: 50rpx;
  background-color: black;
  opacity: 0;
}
.index-container .index-company-info .index-company-logo .logo-info .logo-name .logo-catagory .share .logo-share-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: 100% 100%;
}
.index-container .index-company-info .index-company-logo .logo-info .logo-name .selected {
  color: #0099FF;
}
.index-container .index-company-info .index-company-logo .logo-info .logo-name .normal {
  color: #666666;
}
.index-container .index-company-info .index-company-logo .logo-company-add {
  width: 45rpx;
  height: 45rpx;
  background-size: 100% 100%;
}
.index-container .reg-info {
  width: 100%;
  padding: 40rpx 30rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx dotted #666666;
}
.index-container .reg-info .reg-info-detail-list {
  display: flex;
  justify-content: space-between;
  width: 100%;
  font-size: 30rpx;
  color: #868686;
}
.index-container .reg-info .reg-info-detail-list .reg-info-detail {
  display: flex;
  flex-direction: column;
  text-align: center;
}
.index-container .reg-info .reg-info-detail-list .reg-info-detail .detail-legal-agent {
  color: #0099FF;
}
.index-container .reg-info .reg-info-detail-list .reg-info-detail p {
  margin-bottom: 10rpx;
}
.index-container .reg-info .reg-info-detail-list .reg-status {
  flex: 0 0 190rpx;
}
.index-container .basic-info {
  width: 100%;
  padding: 25rpx 30rpx;
  box-sizing: border-box;
}
.index-container .basic-info .basic-info-title {
  font-size: 36rpx;
  color: #666666;
}
.index-container .basic-info .basic-info-list {
  display: flex;
  justify-content: space-between;
  width: 100%;
}
.index-container .basic-info .basic-info-list .catagory {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  width: 315rpx;
  height: 140rpx;
  border: 1rpx solid #949494;
  font-size: 30rpx;
  color: #666666;
}
.index-container .basic-info .basic-info-list .catagory .catagory-img {
  margin: 0rpx 30rpx;
  width: 55rpx;
  height: 55rpx;
  background-size: 100% 100%;
}
.index-container .business-master {
  width: 100%;
  padding: 25rpx 30rpx;
  box-sizing: border-box;
}
.index-container .business-master .basic-info-title {
  font-size: 36rpx;
  color: #d0d0d0;
}
.index-container .business-master image {
  margin-left: 40rpx;
  width: 80%;
  height: 300rpx;
  background-size: 100% 100%;
}
.index-container .business-information {
  margin-bottom: 35rpx;
}
