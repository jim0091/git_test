@charset "UTF-8";
.index-container {
  width: 100%;
  height: 100vh;
  overflow: hidden;
}
.index-container .index-top {
  width: 100%;
  height: 216rpx;
  background-color: #99CC66;
  overflow: hidden;
}
.index-container .index-top .index-top-img {
  display: block;
  margin: 0 auto;
  margin-top: 30rpx;
  width: 350rpx;
  height: 106rpx;
  background-size: 100% 100%;
}
.index-container .index-company {
  width: 100%;
  height: 104rpx;
  border-bottom: 1rpx dotted #999999;
  font-size: 40rpx;
  color: #666666;
  line-height: 120rpx;
}
.index-container .index-company p {
  margin-left: 25rpx;
}
.index-container .index-catagory {
  width: 100%;
  padding: 0 25rpx;
  box-sizing: border-box;
  border-bottom: 1rpx dotted #999999;
}
.index-container .index-catagory .catagory-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 74rpx;
}
.index-container .index-catagory .catagory-body p {
  font-size: 32rpx;
  color: #0099FF;
}
.index-container .index-catagory .catagory-body .catagory-img {
  width: 28rpx;
  height: 28rpx;
  background-size: 100% 100%;
}
.index-container .g-zhezhao {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 100vh;
  background-color: #000000;
  opacity: 0.5;
}
.index-container .showWeb {
  position: relative;
  z-index: 1000;
  margin: 0 auto;
  margin-top: -200rpx;
  width: 400rpx;
  height: 400rpx;
  border-radius: 20rpx;
  background-color: #ffffff;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, 0.1);
  color: #666666;
  font-size: 30rpx;
}
.index-container .showWeb .showWeb-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 250rpx;
}
.index-container .showWeb .showWeb-info text {
  margin-bottom: 15rpx;
}
.index-container .showWeb .toWeb {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 150rpx;
}
.index-container .showWeb .toWeb button {
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #333333;
}
.index-container .showWeb .toWeb .toWeb-confirm {
  color: #0099FF;
}
