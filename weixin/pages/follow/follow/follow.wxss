@charset "UTF-8";
.follow-container {
  width: 100%;
  height: 100vh;
  overflow: hidden;
}
.follow-container .follow-body {
  width: 100%;
  padding: 20rpx 0rpx 20rpx 30rpx;
  box-sizing: border-box;
  color: #666666;
  font-size: 36rpx;
}
.follow-container .follow-body .follow-company-list {
  display: flex;
  flex-wrap: wrap;
}
.follow-container .follow-body .follow-company-list .company {
  position: relative;
  margin-right: 48rpx;
  margin-top: 35rpx;
  border: 1rpx solid #666666;
  border-radius: 5rpx;
  padding: 3rpx 10rpx;
  box-sizing: border-box;
}
.follow-container .follow-body .follow-company-list .company image {
  position: absolute;
  right: -19rpx;
  top: -24rpx;
  width: 46rpx;
  height: 46rpx;
  background-size: 100% 100%;
}
.follow-container .follow-bottom {
  position: fixed;
  left: 0;
  bottom: 60rpx;
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.follow-container .follow-bottom .follow-button {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.follow-container .follow-bottom .follow-button .button-add {
  border-radius: 5rpx;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
  background-color: #6699FF;
  color: #ffffff;
  font-size: 34rpx;
  text-align: center;
}
